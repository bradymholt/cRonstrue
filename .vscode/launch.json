{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Mocha tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "stopOnEntry": false,
      "args": ["--compilers", "ts:ts-node/register"],
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true
    }
  ]
}
